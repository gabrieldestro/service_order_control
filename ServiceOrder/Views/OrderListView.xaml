<UserControl x:Class="ServiceOrder.OrderListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="#F9F9F9">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <Border Grid.Row="0" Margin="0,0,0,10" Padding="10" Background="White" CornerRadius="5" BorderBrush="#D3D3D3" BorderThickness="1">
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Projetos" FontSize="20" Margin="0,0,0,5"/>

                <ProgressBar x:Name="LoadingProgressBar" IsIndeterminate="True" HorizontalAlignment="Center"
                 VerticalAlignment="Center" Visibility="Collapsed" Width="200" Height="20" Margin="10"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Cliente:" FontWeight="Bold" Foreground="#333"/>
                        <TextBox x:Name="SearchTextBox" Width="150" Height="25" Margin="5"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Label Content="ID:" FontWeight="Bold" Foreground="#333"/>
                        <TextBox x:Name="SearchIdTextBox" Width="100" Height="25" Margin="5"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Label Content="Data Inicial:" FontWeight="Bold" Foreground="#333"/>
                        <DatePicker x:Name="StartDatePicker" Width="150" Height="30" Margin="2"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Label Content="Data Final:" FontWeight="Bold" Foreground="#333"/>
                        <DatePicker x:Name="EndDatePicker" Width="150" Height="30" Margin="2"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Bottom">
                        <Button x:Name="FilterButton" Content="Filtrar" Width="120" Height="35" Margin="5"
                Background="white" BorderThickness="1" Click="OnFilterClick"/>
                        <Button x:Name="ClearButton" Content="Limpar" Width="120" Height="35" Margin="5"
                Background="white" BorderThickness="1" Click="OnClearFiltersClick"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            
        </Border>

        <!-- Grade de Dados -->
        <DataGrid x:Name="OrderDataGrid" Grid.Row="1" Margin="0,0,0,10" Background="White"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  BorderBrush="#D3D3D3" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Ações" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Editar" Width="60" Margin="5" Click="OnEditClick"
                                        Background="white" BorderThickness="1"/>
                                <Button Content="Excluir" Width="60" Margin="5" Click="OnDeleteClick"
                                        Background="white" BorderThickness="1"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Projeto" Binding="{Binding Order.OrderName}" Width="50"/>
                <DataGridTextColumn Header="Valor do Projeto" Binding="{Binding ProjectValue, StringFormat=C}" Width="120"/>

                <!-- Datas da Timeline -->
                <!-- Datas da Timeline com ícones e tooltips -->
                <DataGridTemplateColumn Header="Recebido em" Width="110">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Order.ReceivedDate, StringFormat=dd/MM/yyyy}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Documento Enviado" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" ToolTip="{Binding DocumentSentTooltip}">
                                <TextBlock Text="{Binding Order.DocumentSentDate, StringFormat=dd/MM/yyyy}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding DocumentSentStatusIcon}" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Documento Recebido" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" ToolTip="{Binding DocumentReceivedTooltip}">
                                <TextBlock Text="{Binding Order.DocumentReceivedDate, StringFormat=dd/MM/yyyy}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding DocumentReceivedStatusIcon}" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Cadastro do Projeto" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" ToolTip="{Binding ProjectRegistrationTooltip}">
                                <TextBlock Text="{Binding Order.ProjectRegistrationDate, StringFormat=dd/MM/yyyy}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding ProjectRegistrationStatusIcon}" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Envio do Projeto" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" ToolTip="{Binding ProjectSubmissionTooltip}">
                                <TextBlock Text="{Binding Order.ProjectSubmissionDate, StringFormat=dd/MM/yyyy}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding ProjectSubmissionStatusIcon}" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Aprovação do Projeto" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" ToolTip="{Binding ProjectApprovalTooltip}">
                                <TextBlock Text="{Binding Order.ProjectApprovalDate, StringFormat=dd/MM/yyyy}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding ProjectApprovalStatusIcon}" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Solicitação de Vistoria" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" ToolTip="{Binding InspectionRequestTooltip}">
                                <TextBlock Text="{Binding Order.InspectionRequestDate, StringFormat=dd/MM/yyyy}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding InspectionRequestStatusIcon}" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Finalização" Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" ToolTip="{Binding FinalizationTooltip}">
                                <TextBlock Text="{Binding Order.FinalizationDate, StringFormat=dd/MM/yyyy}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding FinalizationStatusIcon}" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Pagamento" Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" ToolTip="{Binding PaymentTooltip}">
                                <TextBlock Text="{Binding Order.PaymentDate, StringFormat=dd/MM/yyyy}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding PaymentStatusIcon}" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Última Atualização" Binding="{Binding Order.LastUpdated, StringFormat=g}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Contagem de Registros -->
        <Label x:Name="RecordCountLabel" Grid.Row="2" HorizontalAlignment="Right" Margin="0,5,0,5"
               FontSize="12" Foreground="#555"/>

        <!-- Botões -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0">
            <Button Content="Exportar" x:Name="ExportButton" Width="120" Height="40" Margin="10,0,0,0"
                    Background="white" BorderThickness="1" Click="OnExportClick"/>
            <Button Content="Próximo" x:Name="NextButton" Width="120" Height="40" Margin="10,0,0,0"
                    Background="white" BorderThickness="1" Click="OnNextClick"/>
            <Button Content="Nova Ordem" x:Name="NewRegistrationButton" Width="120" Height="40" Margin="10,0,0,0"
                    Background="white" BorderThickness="1" Click="OnNewRegistrationClick"/>
        </StackPanel>
    </Grid>
</UserControl>