<Window x:Class="ServiceOrder.OrderDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro/Visualização de Ordem" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <!-- Campo Nome -->
            <TextBlock Text="Nome" />
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" />

            <!-- Campo Descrição -->
            <TextBlock Text="Descrição" />
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" />

            <!-- Campo Data de Criação -->
            <TextBlock Text="Data de Criação" />
            <TextBox Text="{Binding CreateDate, StringFormat=\{0:g\}, UpdateSourceTrigger=PropertyChanged}" 
                     IsReadOnly="True" Margin="0,5" />

            <!-- Campo Última Atualização -->
            <TextBlock Text="Última Atualização" />
            <TextBox Text="{Binding LastUpdated, StringFormat=\{0:g\}, UpdateSourceTrigger=PropertyChanged}" 
                     IsReadOnly="True" Margin="0,5" />

            <!-- Campo Status -->
            <TextBlock Text="Status" />
            <ComboBox x:Name="StatusComboBox" Margin="0,5">
                <ComboBoxItem Content="Iniciado" Tag="STARTED"/>
                <ComboBoxItem Content="Pendente" Tag="PENDING"/>
                <ComboBoxItem Content="Finalizado" Tag="FINISHED"/>
            </ComboBox>

            <!-- Botão Salvar -->
            <Button Content="Salvar" Width="120" Height="35" Margin="5"
                    Background="white" BorderThickness="1" Click="OnSaveClick" />
        </StackPanel>
    </Grid>
</Window>
